@model Category
<partial name="_Notification" />
<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 clss="text-primary">Edit Cateogry</h2>
			<hr />
		</div>
		<div clss="mb-3">
			<label asp-for="Name">Ctegory Name</label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class=" text-bg-danger"></span>
		</div>

		<div clss="mb-3">
			<label asp-for="DisplayOrder">Display Order</label>
			<input asp-for="DisplayOrder" class="form-control" />
			<span asp-validation-for="DisplayOrder" class=" text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Update</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>

	</div>
</form>
@{

	< partial name = "_ValidationScriptsPartial" />

}